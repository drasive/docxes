<Window x:Name="wManageGrade"
        x:Class="VrankenBischof.Docxes.UserInterface.ManageGrade"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note hinzufügen/ bearbeiten"
        Icon="/Docxes;component/Resources/Images/Icon.ico"
        Height="300"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Grid x:Name="gRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label x:Name="lblSubject"
                   Content="Fach:"
                   Margin="0,11,5,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Padding="5,5,2,5" />
            <ComboBox x:Name="cbSubject"
                      Margin="5,15,10,0"
                      Grid.Column="1"
                      Height="19"
                      VerticalAlignment="Top" />
            <Label x:Name="lblNote"
                   Content="Note:"
                   Margin="0,42,5,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Padding="5,5,2,5" />
            <TextBox x:Name="tbName"
                     Grid.Column="1"
                     Margin="5,48,10,0"
                     TextWrapping="Wrap"
                     VerticalAlignment="Top" />
            <Label x:Name="lblComment"
                   Content="Kommentar:"
                   Margin="0,104,5,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Padding="5,5,2,5" />
            <TextBox x:Name="tbComment"
                     Grid.Column="1"
                     Margin="5,104,10,10"
                     TextWrapping="Wrap" />
            <Label x:Name="lblWeight"
                   Content="Gewicht:"
                   Margin="0,73,5,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Padding="5,5,2,5" />
            <ComboBox x:Name="cbWeight"
                      Margin="6,78,0,0"
                      Grid.Column="1"
                      Height="19"
                      Width="100"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left" />
        </Grid>

        <Button x:Name="btnSave"
                Content="Speichern"
                HorizontalAlignment="Right"
                Margin="0,5,90,0"
                VerticalAlignment="Top"
                Width="75"
                Grid.Row="1"
                Grid.Column="1"
                Height="25"
                Click="btnSave_Click"
                IsDefault="True" />
        <Button x:Name="btnCancel"
                Content="Abbrechen"
                HorizontalAlignment="Right"
                Margin="0,5,10,0"
                VerticalAlignment="Top"
                Width="75"
                Grid.Row="1"
                Grid.Column="1"
                Height="25"
                Click="btnCancel_Click"
                IsCancel="True" />
    </Grid>
</Window>
