<Window x:Name="wManageGrade"
        x:Class="VrankenBischof.Docxes.UserInterface.ManageGrade"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note hinzufügen/ bearbeiten"
        Icon="/Docxes;component/Resources/Images/Icon.ico"
        Height="300"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Grid x:Name="gRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label x:Name="lblNote"
                   Content="Note:"
                   Margin="0,10,5,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Padding="5,5,2,5" />
            <Label x:Name="lblWeight"
                   Content="Gewichtung:"
                   Margin="0,41,5,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Padding="5,5,2,5" />

            <Label x:Name="lblSubject"
                   Content="Fach:"
                   Margin="0,72,5,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Padding="5,5,2,5" />
            <Label x:Name="lblComment"
                   Content="Kommentar:"
                   Margin="0,103,5,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Padding="5,5,2,5"
                   FontStyle="Italic" />
            <TextBox x:Name="tbGrade"
                     Grid.Column="1"
                     Margin="5,16,0,0"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Width="50"
                     HorizontalContentAlignment="Right"
                     MaxLength="4" />
            <TextBox x:Name="tbWeight"
                     Margin="5,47,0,0"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Width="50"
                     Grid.Column="1"
                     HorizontalContentAlignment="Right"
                     Text="100"
                     MaxLength="3" />
            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Left"
                       Margin="56,48,0,0"
                       TextWrapping="Wrap"
                       Text="%"
                       VerticalAlignment="Top" />
            <ComboBox x:Name="cbSubject"
                      Margin="5,75,10,0"
                      Grid.Column="1"
                      Height="23"
                      VerticalAlignment="Top"
                      SelectedValuePath="Id" />
            <TextBox x:Name="tbComment"
                     Grid.Column="1"
                     Margin="5,107,10,6"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     MaxLength="512" />
        </Grid>

        <Button x:Name="btnSave"
                Content="Speichern"
                HorizontalAlignment="Right"
                Margin="0,5,90,0"
                VerticalAlignment="Top"
                Width="75"
                Grid.Row="1"
                Grid.Column="1"
                Height="25"
                Click="btnSave_Click"
                IsDefault="True" />
        <Button x:Name="btnCancel"
                Content="Abbrechen"
                HorizontalAlignment="Right"
                Margin="0,5,10,0"
                VerticalAlignment="Top"
                Width="75"
                Grid.Row="1"
                Grid.Column="1"
                Height="25"
                Click="btnCancel_Click"
                IsCancel="True" />
    </Grid>
</Window>
