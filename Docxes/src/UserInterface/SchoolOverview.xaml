<Window xmlns:Interface="clr-namespace:VrankenBischof.Docxes.UserInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Docxes="clr-namespace:VrankenBischof.Docxes"
        x:Name="wSchoolOverview"
        x:Class="VrankenBischof.Docxes.UserInterface.SchoolOverview"
        x:ClassModifier="internal"
        Title="[Schulname]"
        Height="740"
        Width="930"
        WindowStartupLocation="CenterOwner"
        Loaded="wSchoolOverview_Loaded">

    <Grid x:Name="gRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="tbTitle"
                   HorizontalAlignment="Left"
                   Margin="10,10,0,0"
                   TextWrapping="Wrap"
                   Text="[Schulname]"
                   FontSize="28"
                   VerticalAlignment="Top" />

        <Grid x:Name="gContent"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="643*" />
                <ColumnDefinition Width="278*" />
            </Grid.ColumnDefinitions>

            <Grid x:Name="gMenu"
                  Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="45" />
                </Grid.RowDefinitions>

                <ItemsControl x:Name="icSubjects"
                              Margin="10,10,10,180">
                    <ItemsControl.DataContext>
                        <Docxes:Subject />
                    </ItemsControl.DataContext>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!-- TODO: Fucking vertical scrollbar -->
                            <!--<ScrollViewer>-->
                            <WrapPanel />
                            <!--</ScrollViewer>-->
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>                            
                            <Interface:SubjectOverview ManagingDocuments="SubjectOverview_ManagingDocuments"
                                                       ManagingEvents="SubjectOverview_ManagingEvents"
                                                       ManagingGrades="SubjectOverview_ManagingGrades"
                                                       ManagingNotes="SubjectOverview_ManagingNotes"
                                                       AddingDocument="SubjectOverview_AddingDocument"
                                                       AddingEvent="SubjectOverview_AddingEvent"
                                                       AddingGrade="SubjectOverview_AddingGrade"
                                                       AddingNote="SubjectOverview_AddingNote" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button x:Name="btnChangeSchool"
                        Grid.Row="1"
                        Margin="10,10,0,0"
                        Content="Schule wechseln"
                        Height="25"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Width="117"
                        Click="btnChangeSchool_Click" />
            </Grid>

            <Grid x:Name="gEvents"
                  Grid.Column="1"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Text="Nächste Ereignisse"
                           FontSize="24"
                           VerticalAlignment="top" />

                <StackPanel Grid.Row="1"
                            Margin="0,0,0,180">
                    <Grid x:Name="gEventsThisWeek"
                          Height="150">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock VerticalAlignment="top"
                                   Text="Diese Woche"
                                   FontSize="18" />

                        <ItemsControl x:Name="icEventsThisWeek"
                                      Grid.Row="1">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Interface:EventOverview />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <Grid x:Name="gEventsNextWeek"
                          Height="270">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock VerticalAlignment="top"
                                   Text="Nächste Woche"
                                   FontSize="18" />

                        <ItemsControl x:Name="icEventsNextWeek"
                                      Grid.Row="1">
                            <ItemsControl.DataContext>
                                <Docxes:Event />
                            </ItemsControl.DataContext>

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Interface:EventOverview />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </StackPanel>



                <Grid Height="170"
                      VerticalAlignment="Top"
                      Margin="10,419,0,0"
                      HorizontalAlignment="Left"
                      Width="99"
                      Grid.Row="1">
                    <Button x:Name="btnEvents"
                            Content="Events"
                            HorizontalAlignment="Left"
                            Margin="10,35,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="btnEvents_Click" />
                    <Button x:Name="btnGrades"
                            Content="Grades"
                            HorizontalAlignment="Left"
                            Margin="10,60,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="btnGrades_Click"
                            IsEnabled="False" />
                    <Button x:Name="btnSubjects"
                            Content="Subjects"
                            HorizontalAlignment="Left"
                            Margin="10,110,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="btnSubjects_Click" />
                    <Button x:Name="btnTeachers"
                            Content="Teachers"
                            HorizontalAlignment="Left"
                            Margin="10,135,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="btnTeachers_Click" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
