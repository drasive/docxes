<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Docxes="clr-namespace:VrankenBischof.Docxes"
        x:Name="wSchoolOverview"
        x:Class="VrankenBischof.Docxes.Interface.SchoolOverview"
        Title="SchoolOverview"
        Height="738.833"
        Width="927.968"
        WindowStartupLocation="CenterScreen"
        Loaded="wSchoolOverview_Loaded">

    <Grid x:Name="gRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Left"
                   Margin="10,10,0,0"
                   TextWrapping="Wrap"
                   Text="Title"
                   VerticalAlignment="Top"
                   FontSize="24"
                   Width="188"
                   Height="32" />

        <Grid x:Name="gContent"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="643*" />
                <ColumnDefinition Width="278*" />
            </Grid.ColumnDefinitions>

            <Grid x:Name="gMenu"
                  Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>

                <Grid Height="250"
                      VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Grid x:Name="gNotes"
                          Margin="5">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Notizen [Anzahl]"
                                       FontSize="14" />
                            <Image Source="/Docxes;component/Resources/Images/NotesBackground.jpg"
                                   Stretch="UniformToFill"
                                   Grid.Row="1" />
                        </Grid>
                    </Grid>

                    <Button x:Name="btnDocuments"
                            Content="Documents"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,10,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="btnDocuments_Click" />
                    <Button x:Name="btnEvents"
                            Content="Events"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,35,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="btnEvents_Click"
                            IsEnabled="False" />
                    <Button x:Name="btnGrades"
                            Content="Grades"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,60,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="btnGrades_Click"
                            IsEnabled="False" />
                    <Button x:Name="btnNotes"
                            Content="Notes"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,85,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="btnNotes_Click" />
                    <Button x:Name="btnSubjects"
                            Content="Subjects"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,110,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="btnSubjects_Click" />
                    <Button x:Name="btnTeachers"
                            Content="Teachers"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,135,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="btnTeachers_Click" />
                </Grid>

                <ItemsControl x:Name="icSubjects"
                              Margin="10,255,10,10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.DataContext>
                                    <Docxes:Subject />
                                </Grid.DataContext>

                                <TextBlock Text="{Binding Id, Mode=OneWay}"
                                           FontSize="18" />

                                <Grid Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="3" />
                                        <ColumnDefinition Width="20" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <StackPanel.Resources>
                                            <Style x:Key="StackPanelPadding"
                                                   TargetType="Button">
                                                <Setter Property="Margin"
                                                        Value="0,5,0,0" />
                                            </Style>
                                            <Style BasedOn="{StaticResource StackPanelPadding}"
                                                   TargetType="Button" />
                                        </StackPanel.Resources>

                                        <Button Content="{Binding Documents.Count, Mode=OneWay}" />
                                        <Button Content="{Binding Notes.Count, Mode=OneWay}" />
                                        <Button Content="{Binding Grades.Count, Mode=OneWay}" />
                                        <Button Content="{Binding Events.Count, Mode=OneWay}" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <StackPanel.Resources>
                                            <Style x:Key="StackPanelPadding"
                                                   TargetType="Button">
                                                <Setter Property="Margin"
                                                        Value="0,5,0,0" />
                                                <Setter Property="Content"
                                                        Value="+" />
                                            </Style>
                                            <Style BasedOn="{StaticResource StackPanelPadding}"
                                                   TargetType="Button" />
                                        </StackPanel.Resources>

                                        <Button x:Name="btnAddDocument"
                                                Click="btnAddDocument_Click" />
                                        <Button x:Name="btnAddNote"
                                                Click="btnAddNote_Click" />
                                        <Button x:Name="btnAddGrade"
                                                Click="btnAddGrade_Click" />
                                        <Button x:Name="btnAddEvent"
                                                Click="btnAddEvent_Click" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <Grid x:Name="gEventPreview"
                  Grid.Column="1"
                  Margin="5,0,0,0">
                <TextBlock HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Text="Next events"
                           VerticalAlignment="Top"
                           FontSize="32"
                           Width="188"
                           Height="43" />
                <TextBlock HorizontalAlignment="Left"
