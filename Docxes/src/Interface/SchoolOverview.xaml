        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SchoolOverview"
        Height="738.833"
        Width="927.968"
        WindowStartupLocation="CenterScreen">

    <Grid x:Name="gRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Left"
                   Margin="10,10,0,0"
                   TextWrapping="Wrap"
                   Text="Title"
                   VerticalAlignment="Top"
                   FontSize="24"
                   Width="188"
                   Height="32" />

        <Grid x:Name="gContent"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="643*" />
                <ColumnDefinition Width="278*" />
            </Grid.ColumnDefinitions>

            <Grid x:Name="gMenu"
                  Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Grid x:Name="gNotes"
                          Margin="5">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Notizen [Anzahl]"
                                       FontSize="14" />
                            <Image Source="/Docxes;component/Resources/Images/NotesBackground.jpg"
                                   Stretch="UniformToFill"
                                   Grid.Row="1" />
                        </Grid>
                    </Grid>
                    
                    <Button x:Name="btnDocuments"
                            Content="Documents"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,10,0,0"
                            VerticalAlignment="Top"
                            Width="75" />
                    <Button x:Name="btnEvents"
                            Content="Events"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,35,0,0"
                            VerticalAlignment="Top"
                            Width="75" />
                    <Button x:Name="btnGrades"
                            Content="Grades"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,60,0,0"
                            VerticalAlignment="Top"
                            Width="75" />
                    <Button x:Name="btnNotes"
                            Content="Notes"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,85,0,0"
                            VerticalAlignment="Top"
                            Width="75" />
                    <Button x:Name="btnSubjects"
                            Content="Subjects"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,110,0,0"
                            VerticalAlignment="Top"
                            Width="75" />
                    <Button x:Name="btnTeachers"
                            Content="Teachers"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="10,135,0,0"
                            VerticalAlignment="Top"
                            Width="75" />
                </Grid>
            </Grid>

            <Grid x:Name="gEventPreview"
                  Grid.Column="1"
                  Margin="5,0,0,0">
                <TextBlock HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Text="Next events"
                           VerticalAlignment="Top"
                           FontSize="32"
